@model IEnumerable<MarriageWebWDB.Models.SuggestionModel>

@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1>Your matches:</h1>
    @if (Model.Count() == 0)
    {
    <div align="center"> No matches yet.</div>
    }
    else
    {
    <table class="table">

        @foreach (var item in Model)
        {
        <tr>
            @if (item.File != null)
            {
                <td>
                </td>
                <td>
                    <img src="../../File/Index/?id=@item.File.FileId" alt="avatar" style="width:100px;height:100px;" />
                    @Html.ActionLink(item.UserName, "ShowProfile", new { id = item.UserName })
                </td>
            }
            else
            {
                <td>
                </td>
                <td>
                    <img src="~/Images/untitled.jpg" alt="avatar" style="width:100px;height:100px;" />
                    @Html.ActionLink(item.UserName, "ShowProfile", new { id = item.UserName })
                </td>
            }

            <td>

                <p>@Html.DisplayFor(modelItem => item.FullName)</p>

                <p>@Html.ActionLink("See Profile", "ShowProfile", new { id = item.UserName })</p>
            </td>

            <td>
                @Html.ActionLink("CHAT", "Chat", new { id = item.UserName })
            </td>
        </tr>
        }
    </table>
    }
</body>
</html>

