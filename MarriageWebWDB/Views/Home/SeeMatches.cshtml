@model IEnumerable<string>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Matches</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
</head>

<body>
    <h1>Your matches:</h1>
    @if (Model.Count() == 0)
    {
        <div class="match-container">
            <div align="center"> No matches yet.</div>
        </div>
    }
    else
    {
        <h1 style="color:black">Your matches</h1>
        <hr class="new2" />
        foreach (var item in Model)
        {
            <div class="match-container">
                <img style="width:50px; height:50px; float:left;" src="../../File/UserFile/?id=@item" onerror="this.onerror=null;this.src='../../Images/untitled.jpg';" />
                <h2 style="float:left">@Html.ActionLink(item, "ShowProfile", new { id = item })</h2>
                <a href="@Url.Action("Chat", "Home", new { id = item})" class="button2" style="color:white;" align="center" ;><i class="fas fa-comments"></i> Chat</a>
                <a href="@Url.Action("Unmatch", "Home", new { username = item})" class="button2" style="color:white" ; align="right" ;><i class="fas fa-close"></i> Unmatch</a>
            </div>
            <br />
        }
    }
</body>
</html>

