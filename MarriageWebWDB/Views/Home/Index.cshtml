@model IEnumerable<MarriageWebWDB.Models.SuggestionModel>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
</head>

<body>
    @if (Model.Count() == 0)
    {
        <div class="suggestion-container">
            <h2>It seems that we either found no profiles that fit yours or you went through all we did find.</h2>
            <h2>Either way, remember: "Sometimes we create our own heartbreakes through expectations".</h2>
            <h2>So, maybe lower yours.</h2>
        </div>
    }
    else
    {
        <h1 style="color:black">Yay or nay?</h1>
        <hr class="new2" />
        foreach (var item in Model)
        {
            <div class="suggestion-container">
                <h2>@Html.ActionLink(@item.UserName, "ShowProfile", new { id = @item.UserName })</h2>
                <a href="@Url.Action("Match", "Home", new { id = item.UserName, accepted = false })" class="button2" style="color:white"><i class="fa fa-close"></i> Reject</a>
                <a href="@Url.Action("Match", "Home", new { id = item.UserName, accepted = true })" class="button2" style="color:white"><i class="fa fa-check"></i> Match</a>
                <hr class="new2">
                <div class="picture-container">
                    @if (item.File != null)
                    {
                        <img src="../../File/Index/?id=@item.File.FileId" alt="avatar" style="width:150px; height:150px" />

                    }
                    else
                    {
                        <img src="~/Images/untitled.jpg" alt="avatar" style="width:150px; height:150px" />
                    }
                </div>
                <div class="details-container">
                    <h2>@item.FullName</h2>
                    <p>Gender: @item.Gender</p>
                    <p>Orientation: @item.Orientation</p>
                    <p>Status: @item.Status</p>
                    <p>Religion: @item.Religion</p>
                    <p>Age: @item.Age</p>
                </div>
            </div>
            <br />
            <br />
        }
    }
</body>
</html>
