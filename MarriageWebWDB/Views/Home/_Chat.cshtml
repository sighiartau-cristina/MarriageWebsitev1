@model IEnumerable<MarriageWebWDB.Models.MessageModel>


@foreach (var item in Model)
{
    if (string.Equals(item.SenderUsername, Session["userToken"]))
    {
    <div class="chat-container darker">
        <img style="width:50px; height:50px;" class="right" src="../../File/UserFile/?id=@item.SenderUsername" onerror="this.onerror=null;this.src='../../Images/untitled.jpg';" />
        <p align="right">@item.MessageText</p>
        <span class="time-left" style="color:white">@item.SendDate  • </span>
        <span class="time-left" style="color:white">@Html.ActionLink("Archive", "ArchiveMessage", new { messageId = item.MessageId, username = ViewBag.username })</span>
    </div>
    }
    else
    {
        <div class="chat-container">
            <img style="width:50px; height:50px;" class="left" src="../../File/UserFile/?id=@item.SenderUsername" onerror="this.onerror=null;this.src='../../Images/untitled.jpg';" />
            <p align="left" style="color:black">@item.MessageText</p>
            <span class="time-right" style="color:black">@item.SendDate</span>
        </div>
    }
}






