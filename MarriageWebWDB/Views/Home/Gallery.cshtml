@model IEnumerable<int>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Gallery</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
</head>

<body>
    <br><br>

    <div class="profile-header-container">
        <h1>@ViewBag.username's photos</h1>
        <hr class="new1">
        <div class="table-container">
            <h2 id="emptyGallery"></h2>
            @if (Model.Count() == 0)
            {
                <h1>No photos yet.</h1>
            }
            else
            {
                foreach (var item in Model)
                {
                    <div class="gallery-container" style="width:500px; height:400px"; id=@item>
                        <img style="width:350px; height:350px; border-radius: 0%" src="../../File/Index/?id=@item" onerror="this.onerror=null;this.src='../../Images/untitled.jpg';" />
                    </div>
                    <br />
                }
            }
        </div>
    </div>

</body>
</html>
