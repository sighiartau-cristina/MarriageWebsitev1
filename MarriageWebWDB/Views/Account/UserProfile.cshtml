
@{
    @model MarriageWebWDB.Models.UserModel
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UserProfile</title>
</head>
<body>
    <h1>Profile:</h1>
    <div>
        @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Get))
        {
            <input type="submit" value="Change Password" />
        }
    </div>
    <div style="position:absolute; margin:auto; top:0px; left:0px; right:0px; bottom:0px; height:500px; width:500px">
        @using (Html.BeginForm("UpdateUser", "Account", FormMethod.Post))
        {
            <table>
                <tbody>
                    <tr>
                        <td>Email:</td>
                        <td>@Html.TextBoxFor(m => m.Email)</td>
                    </tr>
                    <tr>
                        <td>Username:</td>
                        <td>@Html.TextBoxFor(m => m.UserName)</td>
                    </tr>
                    <tr>
                        <td>Phone:</td>
                        <td>@Html.TextBoxFor(m => m.Phone)</td>
                    </tr>
                    <tr>
                        <td>Job:</td>
                        <td>@Html.TextBoxFor(m => m.Job)</td>
                    </tr>
                    <tr>
                        <td>Description:</td>
                        <td>@Html.TextAreaFor(m => m.Description)</td>
                    </tr>
                    <tr>
                        <td>Name:</td>
                        <td>@Html.TextBoxFor(m => m.Name)</td>
                    </tr>
                    <tr>
                        <td>Surname:</td>
                        <td>@Html.TextBoxFor(m => m.Surname)</td>
                    </tr>
                    <tr>
                        <td>Gender:</td>
                        <td>@Html.DropDownListFor(m => m.GenderId, Model.Genders)</td>
                    </tr>
                    <tr>
                        <td>Orientation:</td>
                        <td>@Html.DropDownListFor(m => m.OrientationId, Model.Orientations)</td>
                    </tr>
                    <tr>
                        <td>Religion:</td>
                        <td>@Html.DropDownListFor(m => m.ReligionId, Model.Religions)</td>
                    </tr>
                    <tr>
                        <td>Marital Status:</td>
                        <td>@Html.DropDownListFor(m => m.StatusId, Model.Statuses)</td>
                    </tr>
                    <tr>
                        <td>Birthday:</td>
                        <td><input type="date" name="Birthday" value=@Model.BirthdayString min="1920-01-01" /></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><input type="submit" value="Update" /></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>@ViewBag.UpdateUserMessage</td>

                    </tr>
                </tbody>
            </table>
        }
        <h1>Address:</h1>
        @if (!@ViewBag.hasAddress)
        {
            <div>
                @using (Html.BeginForm("AddAddress", "Account", FormMethod.Get))
                {
                    <input type="submit" value="Add Address" />
                }
            </div>
        }
        else
        { 
        <p>Street name: @ViewBag.AddressStreet</p>
        <p>Street number: @ViewBag.AddressStreetNo</p>
        <p>City: @ViewBag.AddressCity</p>
        <p>Country: @ViewBag.AddressCountry</p>
        <div>
            @using (Html.BeginForm("EditAddress", "Account", FormMethod.Get))
            {
                <input type="submit" value="Edit" />
            }
        </div>
    }
    </div>
    
</body>
</html>
